/* pages/messageList/messageList.wxss */

.message_list {
  width: 100%;
  height: 100%;
  background: ghostwhite;
  display: flex;
  flex-direction: column;
}

.message_cell {
  background: white;
  box-shadow: 2rpx 2rpx 10rpx 3rpx #aaa; /*for Android*/
  -webkit-box-shadow: 2rpx 2rpx 10rpx 3rpx #aaa; /*for IOS*/
  border-radius: 10rpx;
  margin: 10rpx 20rpx;
  padding: 10rpx 10rpx;
  display: flex;
  flex-direction: column;
}
.topView{
  display: flex;
  align-items: center;
}

.roundView {
  width: 4px;
  height: 4px;
  border-radius: 2px;
  background: green;
  margin-right: 10rpx;
}
.contentView{
  margin: 15rpx 0;
}