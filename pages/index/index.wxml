<!--index.wxml-->

<map id="map" 
  latitude="{{latitude}}" 
  longitude="{{longitude}}"  
  style="width: 100%; height:100vh"     
  show-location 
  controls="{{controls}}" 
  scale="{{scale}}" 
  bindcontroltap="bindcontroltap">
</map>

<view class="tripView" style="left: {{tirpViewLeft}}px" hidden="{{tripView_hidden}}">
<view class="tripView_title">{{tripTitle}}</view>
<view class="tripView_timer">{{tripTime}}</view>
<view class="tripView_continue" bindtap="tripView_continueHandle" hidden="{{tripView_continue_hidden}}">继续用车</view>
</view>
  
